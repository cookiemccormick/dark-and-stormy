<h1>Comments</h1>
<h3><%= @comments.comment_count %></h3>

<ul>
  <% @comments.each do |comment| %>
    <li>
      <%= link_to comment.user.name, user_path(comment.user) %><br>
      <%= comment.body %><br>
      <%= comment.date %>
    </li><br>
  <% end %>
</ul>

<%= render 'shared/links' %>
<%= link_to "Add Comment", new_recipe_comment_path %><br><br>