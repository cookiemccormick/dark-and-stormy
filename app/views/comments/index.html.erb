<h1>Comments</h1>
<h3><%= @comments.comment_count %></h3>

<ul>
  <% @comments.each do |comment| %>
    <li>
      <%= link_to comment.user.name, user_path(comment.user) %><br>
      <%= comment.body %><br>
      <%= comment.date %>
    </li><br>
  <% end %>
</ul>

<%= link_to "Home", home_path %>
<%= link_to "Add Recipe", new_recipe_path %>
<%= link_to "Recipes", recipes_path %>
<%= link_to "Your Recipes", user_recipes_path(current_user) %>
<%= link_to "Cocktail Makers", users_path %>
<%= link_to "Add Comment", new_recipe_comment_path %>

<%= form_for current_user, url: logout_path, method: :post do |f| %><br>
  <%= f.submit "Logout" %>
<% end %>