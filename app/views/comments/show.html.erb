<h1>Comments: <%= @comment.body%></h1>

<%= link_to "Home", home_path %>
<%= link_to "Create Recipe", new_recipe_path %>
<%= link_to "See All Recipes", recipes_path %>
<%= link_to "See Your Recipes", user_recipes_path(current_user) %>
<%= link_to "Browse Cocktail Makers", users_path %><br><br>

<% if current_user == @comment.user %>
  <%= link_to "Edit Recipe", edit_comment_path %>
  <%= form_for @comment, url: comment_path, method: :delete do |f| %>
    <%= f.submit "Delete" %>
  <% end %>
<% end %>