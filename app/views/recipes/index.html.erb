<h1>Recipes</h1>

<% if @recipes.present? %>
  <ul>
  <% @recipes.each do |recipe| %>
    <li><%= link_to recipe.name, recipe_path(recipe) %> created by <%= recipe.user.name %></li>
  <% end %>
  </ul>
<% else %>
  <p>There are currently no recipes.</p>
<% end %>

<%= link_to "Home", home_path %>
<%= link_to "Create a Recipe", new_recipe_path %>