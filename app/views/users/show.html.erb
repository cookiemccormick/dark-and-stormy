<h1>Cocktail Recipes by <%= @user.name %></h1>

<ul>
  <% @user.recipes.each do |recipe| %>
  <li><%= recipe.name %></li>
  <% end %>
</ul>

<% if current_user.id == @user.id %>
  <%= link_to "Create a New Recipe", new_user_recipe_path(@user) %>
<% else %>
  <%= link_to "Create a New Recipe", new_recipe_path %>
<% end %>